{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build time machine reader",
            "type": "shell",
            "command": ".venv/scripts/activate; pyinstaller --noconfirm --distpath install tm-reader-client/app.py -n tm-reader",
            "problemMatcher": []
        },
        {
            "label": "build docs",
            "type": "shell",
            "command": "../../.venv/scripts/activate; ./make html",
            "options": {
                "cwd": "./web/docs"
            },
            "problemMatcher": []
        },
        {
            "label": "build app",
            "type": "shell",
            "dependsOn": [
                "build docs"
            ],
            "command": "docker compose -f docker-compose.yml build",
            "problemMatcher": []
        },
        {
            "label": "build, push app",
            "type": "shell",
            "dependsOn": [
                "build app"
            ],
            "command": "docker compose -f docker-compose.yml push",
            "problemMatcher": []
        },
        {
            "label": "release",
            "type": "shell",
            "command": "./new-release",
            "options": {
                "cwd": "."
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "dependsOn": [
                "build time machine reader",
                "build, push app",
                "release"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "type": "docker-compose",
            "label": "docker-compose: debug",
            "dependsOn": [
                "build app"
            ],
            "dockerCompose": {
                "up": {
                  "detached": true,
                  "build": false,
                },
                "files": [
                  "${workspaceFolder}/docker-compose.yml",
                  "${workspaceFolder}/docker-compose.debug.yml"
                ]
          },
        },
        {
            "type": "docker-compose",
            "label": "docker-compose: up",
            "dependsOn": [
                "build app"
            ],
            "dockerCompose": {
                "up": {
                  "detached": true,
                  "build": false,
                },
                "files": [
                  "${workspaceFolder}/docker-compose.yml",
                ]
          },
        },
        {
            "type": "docker-compose",
            "label": "docker-compose: down",
            // "dependsOn": [
            //     "build app"
            // ],
            "dockerCompose": {
                "down": {
                //   "services": ["app"]
                },
                "files": [
                  "${workspaceFolder}/docker-compose.yml",
                  "${workspaceFolder}/docker-compose.debug.yml"
                ]
          },
        },
    ]
}