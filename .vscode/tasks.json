{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build time machine reader",
            "type": "shell",
            "command": ".venv/scripts/activate; pyinstaller tm-reader-client/app.py -n tm-reader",
            "problemMatcher": []
        },
        {
            "label": "build docs",
            "type": "shell",
            "command": "../../.venv/scripts/activate; ./make html",
            "options": {
                "cwd": "./web/docs"
            },
            "problemMatcher": []
        },
        {
            "label": "build, push app",
            "type": "shell",
            "command": "docker compose -f docker-compose.yml -f docker-compose.build.yml build; docker compose -f docker-compose.yml -f docker-compose.build.yml push",
            "problemMatcher": []
        },
        {
            "label": "release",
            "type": "shell",
            "command": "./new-release",
            "options": {
                "cwd": "."
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "dependsOn": [
                "build time machine reader", 
                "build docs",
                "build, push app",
                "release",
            ]
        }
    ]
}