{% extends "layout-base.jinja2" %}
{% block nav %}
    {# standard nav uses flask-nav #}
    {% if nav %}
        <input id="main-menu-state" type="checkbox" />
        <label class="main-menu-btn" for="main-menu-state">
          <span class="main-menu-btn-icon"></span> Toggle main menu visibility
        </label>

        {# note smartmenu classes are added using jquery in layout.js because nav doesn't provide api for that #}
        {{ nav.nav_menu.render(id='navigation', renderer='nav_renderer') }}
    {% endif %}
{% endblock %}

{% block metanav %}
    <div class=metanav>
      <label for="metanav-select-interest" class="interest-label">Race:</label>
      <select id="metanav-select-interest">
          {# set in <appname>.__init__ #}
          {% for race in races %}
              <option value="{{ race.id }}">{{ race.raceyear }}</option>
          {% endfor %}
      </select>
      {# used by layout.js, needs to be urlencoded else may look like tag #}
      <span id="metanav-url-rule" hidden>{{ request.url_rule | urlencode }}</span>
      {% if url_rule %}
        <span id="metanav-url-rule-filtered" hidden>{{ url_rule | urlencode }}</span>
      {% endif %}

      {% if adminguide %}
        <a href={{ adminguide }} target="_blank" class="ui-button">Admin Guide</a>
      {% else %}
        <a href={{ config.DEFAULT_ADMIN_GUIDE }} target="_blank" class="ui-button">Admin Guide</a>
      {% endif %}
    </div>
{% endblock %}

